<div class="split-container" style="justify-content: center; align-items: center; background: #0f1115; min-height: 100vh;">
  <div class="card" style="max-width: 500px; width: 100%; padding: 2rem;">
    <h2 class="title" style="text-align: center; margin-bottom: 1.5rem;">Registrar Pago de Servicio</h2>
    
    <%= form_with model: @expense, local: true do |f| %>
      <div class="mb-4" style="margin-bottom: 1.5rem;">
        <label class="label" style="display:block; color:#98a2b3; margin-bottom:0.5rem;">Descripción (Ej: Luz, Agua, Limpieza)</label>
        <%= f.text_field :description, class: "form-input", placeholder: "Escribe la descripción...", required: true, style: "width:100%; padding: 0.8rem; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); color: white; border-radius: 8px;" %>
      </div>

      <div class="mb-4" style="margin-bottom: 2rem;">
        <label class="label" style="display:block; color:#98a2b3; margin-bottom:0.5rem;">Monto a pagar ($)</label>
        <%= f.number_field :amount, step: 0.01, class: "form-input", placeholder: "0.00", required: true, style: "width:100%; padding: 0.8rem; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); color: white; border-radius: 8px;" %>
      </div>

      <div style="display: flex; gap: 1rem;">
        <%= link_to "Cancelar", authenticated_root_path, class: "btn", style: "flex: 1; text-decoration: none; border: 1px solid rgba(255,255,255,0.2); color: white;" %>
        <%= f.submit "Registrar Gasto", class: "btn btn-danger", style: "flex: 1; border: none; cursor: pointer;" %>
      </div>
    <% end %>
  </div>
</div>