<%= stylesheet_link_tag "main_panel", media: "all", "data-turbo-track": "reload" %>

<div class="centered-layout">
  <div class="card-center">
    
    <div style="text-align: center; margin-bottom: 2rem;">
      <h2 class="title" style="margin-bottom: 0.5rem; font-size: 2rem;">Registrar Salida</h2>
      <p class="text-muted">Pago de servicios o retiro de caja</p>
    </div>

    <%= form_with model: @expense, local: true do |f| %>
      
      <div class="mb-4" style="margin-bottom: 1.5rem;">
        <label class="label" style="display:block; margin-bottom:0.5rem;">Descripci√≥n del gasto</label>
        <%= f.text_field :description, 
            class: "form-input", 
            placeholder: "Ej: Pago CFE, Garrafones, Limpieza...", 
            required: true,
            autofocus: true,
            autocomplete: "off" %>
      </div>

      <div class="mb-4" style="margin-bottom: 2.5rem;">
        <label class="label" style="display:block; margin-bottom:0.5rem;">Monto a retirar ($)</label>
        <div style="position: relative;">
          <span class="money-symbol">$</span>
          <%= f.number_field :amount, 
              step: 0.01, 
              class: "form-input input-money", 
              placeholder: "0.00", 
              required: true %>
        </div>
      </div>

      <div style="display: flex; gap: 1rem;">
        <%= link_to "Cancelar", authenticated_root_path, class: "btn", style: "flex: 1; border-color: rgba(255,255,255,0.2); color: #ccc;" %>
        <%= f.submit "Confirmar Retiro", class: "btn btn-danger", style: "flex: 1; font-weight: 800;" %>
      </div>

    <% end %>
  </div>
</div>