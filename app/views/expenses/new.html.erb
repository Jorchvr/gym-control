<div class="centered-container">
  <div class="card card-compact">
    
    <div style="text-align: center; margin-bottom: 2rem;">
      <h2 class="title" style="margin-bottom: 0.5rem;">Registrar Salida</h2>
      <p class="text-muted">Pago de servicios o gastos de caja</p>
    </div>
    
    <%= form_with model: @expense, local: true do |f| %>
      
      <div class="mb-4">
        <label class="label">Descripci√≥n del gasto</label>
        <%= f.text_field :description, 
            class: "form-input", 
            placeholder: "Ej: Pago de luz, Garrafones, Limpieza...", 
            required: true,
            autofocus: true %>
      </div>

      <div class="mb-4">
        <label class="label">Monto a retirar ($)</label>
        <div class="currency-wrapper">
          <span class="currency-symbol">$</span>
          <%= f.number_field :amount, 
              step: 0.01, 
              class: "form-input-lg", 
              placeholder: "0.00", 
              required: true %>
        </div>
      </div>

      <div style="display: flex; gap: 1rem; margin-top: 2rem;">
        <%= link_to "Cancelar", authenticated_root_path, class: "btn", style: "flex: 1;" %>
        <%= f.submit "Confirmar Retiro", class: "btn btn-danger", style: "flex: 1;" %>
      </div>

    <% end %>
  </div>
</div>